#~!/bin/bash
#
echo -n "sisesta kataloogi nimi: " #peab sisestama kataloogi nime
read kataloog #loeb sisestatud
tar -czf $kataloog.backup.tar.zip $kataloog #tarib ja zipib paneb nime ja v천tab kataloogi asukoha
mv $kataloog.backup.tar.zip /home/user/skriptimine/praks4a/backup/ # paneb selle sisestatud backupi kausta
echo "Kataloogi $kataloog backupi nimi on $kataloog.backup.tar.zip ja ta asub /home/user/skriptimine/praks4a/backup/ kataloogis. " #v채ljastab kataloogi mida tuli tarida ja zipida, v채ljastab backupi nime ja kus kohas see asub
#
